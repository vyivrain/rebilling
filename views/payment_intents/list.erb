<div class="container">
  <h2>Payment Intents</h2>
  <div class="table-responsive">
    <table class="table table-striped table-hover">
      <thead class="table-light">
        <tr>
          <th scope="col">#</th>
          <th scope="col">Status</th>
          <th scope="col">Amount</th>
          <th scope="col">Subscription Identifier</th>
          <th scope="col">Account Identifier</th>
        </tr>
      </thead>
      <tbody>
        <% payment_intents.each do |payment_intent| %>
          <tr>
            <th scope="row"><%= payment_intent[:id] %></th>
            <td><%= payment_intent[:status] %></td>
            <td><%= payment_intent[:amount] %></td>
            <td><%= payment_intent[:subscription_identifier] %></td>
            <td><%= payment_intent[:account_identifier] %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
